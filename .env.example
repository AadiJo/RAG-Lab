# RAG Eval Bench Configuration

# =============================================================================
# Chutes AI Configuration (for LLM-based metrics)
# =============================================================================
CHUTES_API_TOKEN=your_chutes_api_token_here
CHUTES_API_URL=https://llm.chutes.ai/v1/chat/completions
CHUTES_MODEL=openai/gpt-oss-20b

# =============================================================================
# FRC-RAG Integration
# =============================================================================
# API Mode - Connect to running FRC-RAG backend
FRC_RAG_API_URL=http://localhost:5002

# Direct Mode - Path to FRC-RAG backend for Python bridge
FRC_RAG_BACKEND_PATH=/path/to/frc-rag/backend

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3100
HOST=localhost

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_PATH=./data/eval-bench.sqlite

# =============================================================================
# Evaluation Defaults
# =============================================================================
DEFAULT_K_VALUES=5,10,15,20
DEFAULT_DATASET=frc-specific
